extends ../layout

block content
  .container
    .row
      include ../../includes/logo-top
      .col-md-8.col-md-offset-4.pull-left.mmmain
        if book
          .col-md-12
            a(href="/books/#{book.id}/edit") Edit Book
            br
            a(href="/books/#{book.id}/delete") Delete Book
            hr
          .col-md-12
            .col-md-4.pull-left
              p
                img(src="#{book.cover_url}" alt="#{book.title} cover" width="100%%")
            .col-md-8.pull-left      
              p
                h3 #{book.title}
            .col-md-8.pull-left      
              p
                | By 
                if authors
                  for author in authors
                    a(href="/authors/#{author.id}") #{author.firstname} #{author.lastname}
                
            .col-md-8.pull-left      
              p
                | #{book.genre}
              p  
                | #{book.description}
