extends ../layout

block content
  .container
    if book
      .row
        include ../../includes/logo-top
        .col-md-8.col-md-offset-4.pull-left.mmmain
          p
            h2 Edit Book
            hr
            form(method="POST" action="/books/#{book.id}")
              .hidden
                input(type="number" id="id" name='id' value= (book ? book.id : undefined))
              include ../../includes/book-form
              .form-group.footer
                button.btn.btn-default(type="submit") Submit Changes
                a.btn.btn-danger(href="/books") Cancel
